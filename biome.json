{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
	  "enabled": true,
	  "clientKind": "git"
	},
	"files": {
	  "ignore": ["node_modules/", "public/", ".next/"]
	},
	"formatter": {
	  "enabled": true,
	  "indentStyle": "space",
	  "lineWidth": 100
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true
	  }
	},
	"javascript": {
	  "formatter": {
		"quoteStyle": "single",
		"trailingComma": "es5"
	  }
	}
  }